{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "jsx": "react-native",
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node16",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@types/*": [
        "src/types/*"
      ]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "inlineSources": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "App.tsx"
  ],
  "extends": "expo/tsconfig.base"
}
